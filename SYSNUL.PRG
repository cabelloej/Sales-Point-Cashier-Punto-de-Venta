SAVE SCRE TO WSCRENUL
STORE 0   TO WFACTURA
STORE " " TO WFACTURAC
@ 05,00 CLEAR TO 07,40
@ 05,00 TO 07,40 DOUBLE
@ 05,11 SAY " ANULAR FACTURA "
@ 06,10 SAY "FACTURA :"
@ 06,20 GET WFACTURA PICTURE "9999999"
READ
IF LASTKEY()=27 .OR. WFACTURA = 0
   RESTORE SCRE FROM WSCRENUL
   RETURN
ENDIF
DO ARMAFAC
DO OPEVTAD
DO WHILE .T.
   SEEK WFACTURAC
   IF FOUND()
      IF RECLOC()
         DELETE
         UNLOCK ALL
      ENDIF
   ELSE
      CLOSE DATA
      CLOSE INDEX
      RESTORE SCRE FROM WSCRENUL
      RETURN
   ENDIF
ENDDO

