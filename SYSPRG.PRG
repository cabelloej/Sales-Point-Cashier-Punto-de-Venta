SELECT SYSPRG
DEFI WIND BRPRG FROM LIBRPRG,CIBRPRG TO LIBRPRG+10,CIBRPRG+60 ;
                TITLE " PROGRAMAS " ;
                FOOTER " F1=Inc,F2=Mod,F3=Eli,F4=Bus,F5=Ord,ESC=Sel ";
                DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND BRPRG
ON KEY LABEL F1 DO BRINC
ON KEY LABEL F2 DO BRMOD
ON KEY LABEL F3 DO BRELI
ON KEY LABEL F4 DO BRBUS
ON KEY LABEL F5 DO BRORD
BROWSE FIELDS PROGRAMA:H="PROGRAMA", DESCRI:H="DESCRIPCION";
              NOAPPEND NODELETE NOEDIT NOMENU NOOPTIMIZE REST SAVE IN WINDOW BRPRG
RELEASE WIND BRPRG
RETURN
