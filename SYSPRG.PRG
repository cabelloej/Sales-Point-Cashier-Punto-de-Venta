PROCEDURE BRINC
DEFI WIND WINCSER FROM LIBRPRG+5,CIBRPRG+10 TO LIBRPRG+10,CIBRPRG+75;
                  TITLE " INCLUIR " DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND WINCSER
DO WHILE .T.
   SCAT MEMV BLANK
   @ 00,00 CLEAR
   @ 00,01 SAY "PROGRAMA   :"
   @ 01,01 SAY "DESCRIPCION:"
   @ 00,14 GET M.PROGRAMA
   READ
   IF LASTKEY()=27
      EXIT
   ENDIF
   STORE M.PROGRAMA TO WCLAVESER
   IF LEN(TRIM(WCLAVESER))=0
      LOOP
   ENDIF
   SEEK WCLAVESER
   IF FOUND()
      @ 01,14 SAY DESCRI
      STORE "YA EXISTE, VERIFIQUE" TO WTEXT
      DO AVISO WITH WTEXT
      LOOP
   ELSE
      @ 01,14 GET M.DESCRI
      READ
      *** INICIO RUTINA DE ACEPTAR-CANCELAR
      store 1 to wop
      do while .t.
         @ 03,22  get wop pict "@*H Aceptar;Cancelar" defa wop
         read
         if lastkey()=13
            exit
         endif
      enddo
      *** FIN  RUTINA ACEPTAR-CANCELAR
      if wop=1
         if filloc()
            append blank
            gath memvar
            unlock all
         endif
      endif
   ENDIF
ENDDO
RELEASE WIND WINCSER
RETURN
