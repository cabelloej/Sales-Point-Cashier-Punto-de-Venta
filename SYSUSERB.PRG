FUNCTION VALPRG
SELECT SYSPRG
SEEK M.PROGRAMA
IF.NOT.FOUND()
   librPRG=10
   cibrPRG=0
   do sysprg
   store .t. to wflagser
   STORE SYSPRG.PROGRAMA TO M.PROGRAMA
ENDIF
STORE SYSPRG.DESCRI TO WDESSER
SELECT SYSUSERD
RETURN .T.
