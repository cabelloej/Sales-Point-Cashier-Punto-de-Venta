PROCEDURE BRINC
DEFI WIND WINCPD FROM LIBRUSR+03,CIBRUSR+34 TO LIBRUSR+06,CIBRUSR+79;
                 TITLE " INCLUIR PROGRAMA ";
                 DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND WINCPD
DO WHILE .T.
   SELECT SYSUSERD
   SCAT MEMV BLANK
   STORE SPACE(1) TO WDESSER
   STORE SYSUSER.USERCODE TO M.USERCODE
   STORE .F. TO WFLAGSER
   @ 00,00 CLEAR
   @ 00,01 GET M.PROGRAMA VALID VALPRG()
   READ
   IF .NOT.WFLAGSER.AND.LASTKEY()=27
      EXIT
   ENDIF
   STORE M.USERCODE+M.PROGRAMA TO WCLAVEPLAD
   IF LEN(TRIM(WCLAVEPLAD))=0
      LOOP
   ENDIF
   SELECT SYSUSERD
   SEEK WCLAVEPLAD
   IF FOUND()
      @ 00,01 SAY SYSPRG.DESCRI
      STORE "YA EXISTE, VERIFIQUE" TO WTEXT
      DO AVISO WITH WTEXT
      LOOP
   ELSE
      @ 00,01 SAY WDESSER
      @ 00,32 GET M.ACCESO
      @ 00,37 GET M.FILTRO
      READ
      *** INICIO RUTINA DE ACEPTAR-CANCELAR
      store 1 to wop
      do while .t.
         @ 01,12  get wop pict "@*H Aceptar;Cancelar" defa wop
         read
         if lastkey()=13
            exit
         endif
      enddo
      *** FIN  RUTINA ACEPTAR-CANCELAR
      if wop=1
         if filloc()
            append blank
            gath memvar
            unlock all
         endif
      endif
   ENDIF
ENDDO
RELE WIND WINCPD
RETURN
