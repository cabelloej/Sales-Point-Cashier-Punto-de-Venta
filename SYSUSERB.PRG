PROCEDURE BRBUS
DEFI WIND WBUSPD FROM LIBRUSR+03,CIBRUSR+34 TO LIBRUSR+06,CIBRUSR+79;
                 TITLE " BUSCAR ACCESO ";
                 DOUBLE NOFLOAT NOZOOM NOGROW SHADOW COLOR SCHEME 10
ACTI WIND WBUSPD
SCAT MEMVAR
@ 00,01 GET M.PROGRAMA
READ
IF LASTKEY()=27
   RELEASE WIND WBUSPD
   RETURN
ENDIF
STORE SYSUSER.USERCODE+M.PROGRAMA TO WCLAVEPLAD
IF LEN(TRIM(WCLAVEPLAD))=0
   RELEASE WIND WBUSPD
   RETURN
ENDIF
SELECT SYSUSERD
SEEK WCLAVEPLAD
IF FOUND()
   RELEASE WIND WBUSPD
   RETURN
ELSE
   STORE "NO REGISTRADO, VERIFIQUE" TO WTEXT
   DO AVISO WITH WTEXT
   RELEASE WIND WBUSPD
   RETURN
ENDIF
