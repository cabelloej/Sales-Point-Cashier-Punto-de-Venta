SELECT SYSUSERD
DEFI WIND BRUD FROM LIBRUSR,CIBRUSR+34 TO LIBRUSR+16,CIBRUSR+79;
               TITLE " ACCESOS DEL USUARIO " ;
               FOOTER " F1=Inc,F2=Mod,F3=Eli,F4=Bus,ESC=Sel ";
               DOUBLE NOZOOM NOGROW COLOR SCHEME 10
ACTI WIND BRUD
ON KEY LABEL F1 DO BRINC
ON KEY LABEL F2 DO BRMOD
ON KEY LABEL F3 DO BRELI
ON KEY LABEL F4 DO BRBUS
ON KEY LABEL F5 DO BRORD
BROWSE FIELDS SYSPRG.PROGRAMA:H="PROGRAMA",SYSPRG.DESCRI:H="PROGRAMA",ACCESO:H="TA",FILTRO:H="TD";
       FOR USERCODE=SYSUSER.USERCODE;
       NOAPPEND NODELETE NOEDIT NOCLEAR NOMENU NOOPTIMIZE;
       REST IN WINDOW BRUD
